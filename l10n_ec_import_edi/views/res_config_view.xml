<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_electronic_form_view">
        <field name="name">res.config.settings.import.edi.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='l10n_ec_edi_withholding']" position="after">
                <block id="l10n_ec_edi_import" title="XML Document Import">
                    <setting
                        id="l10n_ec_create_product"
                        help="Mark option if you want create products from XML automatically when product is not find on system"
                    >
                        <field name="l10n_ec_import_create_product" />
                    </setting>
                    <setting
                        id="l10n_ec_create_document_automatic"
                        help="Mark option if you want create documents from XML automatically without waiting to user review document(Automatic Process)"
                    >
                        <field name="l10n_ec_import_create_document_automatic" />
                    </setting>
                    <setting
                        id="l10n_ec_check_data_document"
                        help="Mark the option if you want to verify the data of the electronic document."
                    >
                        <field name="l10n_ec_check_data_document_automatic" />
                    </setting>
                    <setting
                        id="l10n_ec_check_document_exist"
                        help="Mark the option if you want to verify the document related(on withholding) exists on system."
                    >
                        <field name="l10n_ec_check_document_exist" />
                    </setting>
                    <setting
                        id="l10n_ec_import_alias_id"
                        string="Email for read XML"
                        help="Incoming mail from this address evaluate attachment XML files to create documents(invoice, withhold)"
                    >
                        <field
                            name="l10n_ec_import_alias_id"
                            domain="[('alias_model_id.model', '=', 'l10n_ec.edi.imported')]"
                            context="{'alias_model_name': 'l10n_ec.edi.imported', 'alias_parent_model_name': 'res.company', 'default_alias_user_id': False}"
                            options="{'no_create_edit': True}"
                            class="oe_inline"
                        />
                        <label
                            for="alias_domain_id"
                            string="@"
                            invisible="l10n_ec_import_alias_id"
                        />
                        <field
                            name="alias_domain_id"
                            readonly="1"
                            force_save="1"
                            class="oe_inline"
                            invisible="l10n_ec_import_alias_id"
                        />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
